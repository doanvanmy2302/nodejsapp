<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path==='/' ? 'active' :'' %> " href='/'>TRANG CHỦ</a>
            </li>
            <% if(isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/timekeeping' ? 'active' : '' %>" href="/timekeeping">CHẤM CÔNG</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/staff-info' ? 'active' : '' %>" href="/staff-info">THÔNG TIN NHÂN VIÊN</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/salary' ? 'active' : '' %>" href="/salary">THÔNG TIN BẢNG LƯƠNG</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/covid' ? 'active' : '' %>" href="/covid">THÔNG TIN COVID</a>
            </li>
            <% } %>
            <% if(isManager) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/manager' ? 'active' : '' %>" href="/manager">TRANG QUẢN LÝ</a>
                </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if(!isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<% path==='/login'? 'active' : '' %>" href='/login'>ĐĂNG NHẬP</a>
            </li>
            <% } else { %>
            <li class="main-header__item">
                <form action="/logout" method="post">
                    <button class="logout" type="submit">ĐĂNG XUẤT</button>
                </form>
            </li>
            <% } %>
        </ul>
    </nav>
</header>

