            <li class="mobile-nav__item">
                <a class="<%= path === '/salary' ? 'active' : '' %>" href="/salary">THÔNG TIN BẢNG LƯƠNG</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/covid' ? 'active' : '' %>" href="/covid">THÔNG TIN COVID</a>
            </li>
            <% } %>
            <% if(isManager) { %>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/manager' ? 'active' : '' %>" href="/manager">TRANG QUẢN LÝ</a>
